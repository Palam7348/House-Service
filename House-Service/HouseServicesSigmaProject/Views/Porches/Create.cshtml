@model HouseServicesSigmaProject.Models.Porch

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<input name="houses-to-load" id="houses-to-load" type="hidden" value="@Url.Action("GetHousesToLoad")" />
<input name="street-to-load" id="street-to-load" type="hidden" value="@Url.Action("GetStreetsToLoad")" />



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Porch</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })




        <div class="editor-label">
            @Html.LabelFor(model => model.house.street.subRegion.Name, "Название района")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SubRegionId", String.Empty)
            @*@Html.ValidationMessageFor(model => model.SubRegionId)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.house.street.Name, "Название улицы")
        </div>
        <div class="editor-field">
            @Html.DropDownList("StreetId", String.Empty)
            @*@Html.ValidationMessageFor(model => model.StreetId)*@
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.house.HouseNumber, "Номер дома")
            </div>
            <div class="editor-field">
                @Html.DropDownList("HouseId", String.Empty)
                @Html.ValidationMessageFor(model => model.HouseId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PorchNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PorchNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PorchNumber, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
        <hr />
        <div>
            @Html.ActionLink("Обратно", "Index")
        </div>
