@model HouseServicesSigmaProject.Models.House
@{
    ViewBag.Title = "Уведомления";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HouseId)



        <h2>Вы выбрали дом с номером - @Model.HouseNumber</h2>

        @Html.TextArea("textArea", "Введите сообщение: ", 5, 50, null)

        <input name="HouseId" id="HouseId" type="hidden" value="@Model.HouseId" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно", "Index")
</div>


