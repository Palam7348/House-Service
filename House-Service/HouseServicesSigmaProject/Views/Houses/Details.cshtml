@model HouseServicesSigmaProject.Models.House

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Дом с номером @Model.HouseNumber</h4>
    <hr />


    <table class="MyTable" cellpadding="10" border="1" width="900" align="center">
        <tr class="Tr">
      
            <th class="Th">Номер дома</th>
            <th class="Th">Название улицы</th>
            <th class="Th">Название района</th>
        </tr>
        <tr class="Tr">

            
            <td class="Td" align="center">@Model.HouseNumber</td>
            <td class="Td" align="center">@Model.street.Name</td>
            <td class="Td" align="center">@Model.street.subRegion.Name</td>
        </tr>
    </table>
    <h2>Количество квартир в доме - @ViewBag.count</h2>
</div>
<p>
  
    @Html.ActionLink("Обратно", "Index")
</p>
