@model HouseServicesSigmaProject.Models.Street

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Название улицы -  @Model.Name</h4>
    <hr />


    <table class="MyTable" cellpadding="10" border="1" width="900" align="center">
        <tr class="Tr">
            <th class="Th">Название улицы</th>
            <th class="Th">Название района</th>
        </tr>
        <tr class="Tr">
            <td class="Td" align="center">@Model.Name</td>
            <td class="Td" align="center">@Model.subRegion.Name</td>
        </tr>
    </table>
    <h2>Количество квартир в улице - @ViewBag.count</h2>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
