@model HouseServicesSigmaProject.Models.SubRegion
@{
    ViewBag.Title = "Уведомления";
}





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SubRegionId)



        <h2>Вы выбрали район с названием - @Model.Name</h2>

        @Html.TextArea("textArea", "Введите сообщение: ", 5, 50, null)

        <input name="SubRegionId" id="SubRegionId" type="hidden" value="@Model.SubRegionId" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно", "Index")
</div>
